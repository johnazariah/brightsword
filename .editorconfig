# top-most EditorConfig file
root = true

[*.{cs,csproj,sln}]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4
dotnet_sort_system_directives_first = true

# Prefer var when the type is apparent
csharp_style_var_when_type_is_apparent = true:suggestion
# Prefer var for built-in types (int, string, etc.)
csharp_style_var_for_built_in_types = true:suggestion
# Prefer var elsewhere when not ambiguous
csharp_style_var_elsewhere = true:suggestion

# Expression-bodied members when concise
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = when_on_single_line:suggestion

# Prefer simplified null-check/default expressions
csharp_prefer_simple_default_expression = true:suggestion

# Analyzer severities (raise to warning to surface diagnostics during this scan)
dotnet_analyzer_diagnostic.severity = warning

# Disable Public API Analyzers warnings
# RS0016: Symbol is not part of the declared public API
dotnet_diagnostic.RS0016.severity = none

# RS0037: PublicAPI.txt is missing '#nullable enable'
dotnet_diagnostic.RS0037.severity = none

# RS0026: Do not add multiple public overloads with optional parameters
dotnet_diagnostic.RS0026.severity = none

# Roslynator analyzers - set to suggestion to reduce noise
# RCS1140: Add exception to documentation comment
dotnet_diagnostic.RCS1140.severity = suggestion

# RCS1141: Add 'param' element to documentation comment
dotnet_diagnostic.RCS1141.severity = suggestion

# RCS1142: Add 'typeparam' element to documentation comment
dotnet_diagnostic.RCS1142.severity = suggestion

# RCS1181: Convert comment to documentation comment
dotnet_diagnostic.RCS1181.severity = suggestion

# RCS1228: Unused element in documentation comment
dotnet_diagnostic.RCS1228.severity = suggestion

# RCS1032: Remove redundant parentheses
dotnet_diagnostic.RCS1032.severity = suggestion

# RCS1118: Mark local variable as const
dotnet_diagnostic.RCS1118.severity = suggestion

# File-specific overrides can be added below as needed

# Roslynator configuration defaults (conservative choices)
roslynator_object_creation_type_style = explicit
roslynator_accessibility_modifiers = always
roslynator_enum_has_flag_style = attribute
